extends ../../layout/student

block content
  .panel.panel-default
    .panel-heading 学生登录
    .panel-body
      form.form-horizontal(method="post",action="/account/signin")
        .form-group
          label.control-label.col-sm-2 账号
          .col-sm-10
            input.form-control(name="sid")
        .form-group
          label.control-label.col-sm-2 密码
          .col-sm-10
            input.form-control(type="password",name="pwd")
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-primary(type="submit") 立即登录
            .pull-right
              | 没有账号，
              a(href="/account/signup") 去注册